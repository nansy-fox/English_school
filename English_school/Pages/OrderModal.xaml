<Window x:Class="English_school.Pages.OrderModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:English_school.Pages"
        mc:Ignorable="d"
        Title="OrderModal" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Выберите клиента:" />
            <ComboBox x:Name="ComboBoxClients" Margin="0,5" />

            <TextBlock Text="Выберите услугу:" />
            <ComboBox x:Name="ComboBoxServices" Margin="0,5" />

            <TextBlock Text="Время начала:" />
            <DatePicker x:Name="DatePickerStartTime" Margin="0,5" />

            <TextBlock Text="Комментарий:" />
            <TextBox x:Name="TextBoxComment" Margin="0,5" Height="60" TextWrapping="Wrap" AcceptsReturn="True" />

            <Button Content="Создать запись" Margin="0,10" Click="ButtonCreate_Click" />
        </StackPanel>
    </Grid>
</Window>
